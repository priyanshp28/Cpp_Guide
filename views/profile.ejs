<!-- To Show the Profile of User with its username and gmail. It also shows the direct link to
all the questions and answers of the user. -->

<%- include('partials/header'); -%>

  <div class="profile">
    <div class="profile-tab">
      <img src="/Userimage.png" style="width: 200px; height: 200px" />
      <div class="Row" style="margin-top: 50px;">
        <div class="Row">
          <h3>Name : <%= userOP.username %>
          </h3>
        </div>
        <div class="Row">
          <h3>Mail : <%= userOP.email %>
          </h3>
        </div>
      </div>
    </div>
    <div class="Row" style="margin-top: 60px">
      <div class="Column">
        <button type="button" class="btn-success-solve">
          <a href="/" class="textC"> Answer Posted </a>
        </button>
        <div class="Rowrapper">
          <% for (var i=0; i < userOP.answers.length; i++) { %>
            <ul style="-webkit-overflow-scrolling: touch">
              <li class="op">
                <a href="/profile/answers/show/<%= userOP.answers[i]._id %>">
                  Answer <%= i+1 %>
                  <i class="fas fa-external-link-alt" style="margin-left: 70px">
                    </i>
                  </a>
              </li>
            </ul>
            <% } %>
        </div>
      </div>

      <div class="Column">
        <button type="button" class="btn-success-solve">
          <a href="/" class="textC"> Question Posted </a>
        </button>
        <div class="Rowrapper">
          <% for (var i=0; i < userOP.questions.length; i++) { %>
            <ul style="-webkit-overflow-scrolling: touch">
              <li class="op">
                <a href="/profile/questions/QuestionDisplay/<%= userOP.questions[i]._id %>">
                    Question<%= i+1 %>
                    <i class="fas fa-external-link-alt" style="margin-left: 70px">
                    </i>
                  </a>
              </li>
            </ul>
            <% } %>
        </div>
      </div>
    </div>
  </div>